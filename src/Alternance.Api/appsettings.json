{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "AllowedHosts": "*",
  "ConnectionStrings": {
    "MongoDB": "mongodb://localhost:27017/alternance-test-db",
    "Redis": "localhost:6379"
  },
  "JwtSettings": {
    "Secret": "your-secret-key-here-must-be-at-least-32-characters-long",
    "Issuer": "AlternanceApi",
    "Audience": "AlternanceClient",
    "ExpiryInDays": 7
  },
  "RateLimiting": {
    "PermitLimit": 100,
    "WindowInSeconds": 900
  }
}

# ASP.NET Core Configuration
ASPNETCORE_ENVIRONMENT=Development
ASPNETCORE_URLS=https://localhost:5001;http://localhost:5000

# MongoDB Configuration
ConnectionStrings__MongoDB=mongodb://localhost:27017/alternance-db

# Redis Configuration
ConnectionStrings__Redis=localhost:6379,password=

# JWT Configuration
JwtSettings__Secret=your-secret-key-here-must-be-at-least-32-characters-long
JwtSettings__Issuer=AlternanceApi
JwtSettings__Audience=AlternanceClient
JwtSettings__ExpiryInDays=7

# Email Service Configuration
EmailSettings__Host=smtp.example.com
EmailSettings__Port=587
EmailSettings__Username=
EmailSettings__Password=
EmailSettings__FromEmail=noreply@alternance.com
EmailSettings__FromName=Alternance Platform

# Storage Service (AWS S3 or Azure Blob)
StorageSettings__Provider=AWS
StorageSettings__BucketName=
StorageSettings__Region=eu-west-1
StorageSettings__AccessKey=
StorageSettings__SecretKey=

# AI Service (OpenAI)
AISettings__Provider=OpenAI
AISettings__ApiKey=
AISettings__Model=gpt-4
AISettings__MaxTokens=1000

# Rate Limiting
RateLimiting__PermitLimit=100
RateLimiting__WindowInSeconds=900

# CORS
CorsSettings__AllowedOrigins=http://localhost:3000,https://localhost:3001

# Logging
Logging__LogLevel__Default=Information
Logging__LogLevel__Microsoft=Warning
Logging__LogLevel__Microsoft.Hosting.Lifetime=Information
